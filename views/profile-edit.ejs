<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="/public/css/styles.css" rel="stylesheet" type="text/css" />
  <title>Edit Profile</title>
</head>

<body>
  <!-- Header section -->
  <div class="header">
    <!-- Company logo -->
    <div class="company">
      <img src="/public/images/tw-logo.png" alt="Company Logo" class="logo">
    </div>

    <!-- Navigation bar -->
    <nav class="nav-bar">
      <ul class="nav-links">
          <li class="nav-item"><a href="/home" id="home-link">Home</a></li>
          <li class="nav-item"><a href="/biography" id="biography-link">Biography</a></li>
          <li class="nav-item"><a href="/project" id="project-link">Project</a></li>
          <li class="nav-item"><a href="/skill/1" id="skill-link">Skill</a></li>
          <% if (user.RoleID === 1) { %>
            <li class="nav-item settings-tab">
                <a href="#" id="settings-link">Settings</a>
                <ul class="user-options">
                    <li><a href="/user" id="manage-user-link">Manage User</a></li>
                    <li><a href="/project-adm" id="manage-project-link">Manage Project</a></li>
                    <li><a href="/upload" id="upload-link">Upload</a></li>
                </ul>
            </li>
        <% } %>
          <li class="nav-item"><a href="/logout" id="logout-link">Logout</a></li>
      </ul>
  </nav>
  </div>

  <h1>Edit Profile</h1>
  <form class="form-input" id="profileForm" action="/profile-edit" method="POST">
    <label for="firstName">First Name:</label>
    <input type="text" id="firstName" name="firstName" value="<%= users[0].FirstName %>" required>
    <label for="lastName">Last Name:</label>
    <input type="text" id="lastName" name="lastName" value="<%= users[0].LastName %>" required>
    <label for="email">Email:</label>
    <input type="email" id="email" name="email" value="<%= users[0].EmailAddress %>" required>
    <label for="password">Password:</label>
    <input type="password" id="password" name="password">
    <label for="bioDescription">Biography Description:</label>
    <textarea id="bioDescription" name="bioDescription" rows="8" cols="50" maxlength="1500" required><%= bio[0].Description %></textarea>
    <p style="text-align: right; font-size: 12px;"><span id="charCount">0</span>/1500 characters</p>
    <br><button type="submit">Save Changes</button>
  </form>

  <script>
    const profileForm = document.getElementById('profileForm');
    const bioDescription = document.getElementById('bioDescription');
    const charCount = document.getElementById('charCount');

    bioDescription.addEventListener('input', () => {
      charCount.textContent = bioDescription.value.length;
    });
  </script>
</body>

</html>