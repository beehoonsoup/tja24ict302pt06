<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="/public/css/styles.css" rel="stylesheet" type="text/css"/>
  <script src="https://kit.fontawesome.com/df899a6e31.js" crossorigin="anonymous"></script>
  <title>Projects</title>
  <style>
    table {
      width: 100%;
      border-collapse: collapse;
    }

    th,
    td {
      /*border: 1px solid black;*/
      padding: 8px;
      text-align: left;
    }
  </style>

<script>
  function positionSuggestionsContainer() {
    const searchInput = document.getElementById('searchInput');
    const projectSuggestionsContainer = document.getElementById('projectSuggestionsContainer');

    // Get the position and dimensions of the search input
    const inputRect = searchInput.getBoundingClientRect();

    // Set the top position of the suggestions container
    projectSuggestionsContainer.style.top = inputRect.bottom + 'px';
  }

  function getSuggestions(input) {
    const projectSuggestionsContainer = document.getElementById('projectSuggestionsContainer');

    if (input.trim() === '') {
      // Clear input, hide suggestions container, and return
      projectSuggestionsContainer.innerHTML = '';
      return;
    }

    fetch(`/search-projects?query=${input}`)
      .then(response => response.json())
      .then(data => {
        projectSuggestionsContainer.innerHTML = '';
        data.forEach(project => {
          const suggestion = document.createElement('div');
          suggestion.textContent = project.ProjectName;
          suggestion.classList.add('projectSuggestion');
          suggestion.onclick = () => selectProject(project.ProjectID);
          projectSuggestionsContainer.appendChild(suggestion);
        });
        // Show suggestions container
        projectSuggestionsContainer.style.display = 'block';
      })
      .catch(error => console.error('Error fetching suggestions:', error));
  }

  function selectProject(projectID) {
    window.location.href = `/project/${projectID}`;
  }

  // Call positionSuggestionsContainer initially and whenever window is resized
  window.addEventListener('DOMContentLoaded', positionSuggestionsContainer);
  window.addEventListener('resize', positionSuggestionsContainer);
</script>
</head>

<body>

  <!-- Header section -->
<div class="header">
  <!-- Company logo -->
  <div class="company">
      <img src="/public/images/tw-logo.png" alt="Company Logo" class="logo">
  </div>

  <!-- Navigation bar -->
  <nav class="nav-bar">
    <ul class="nav-links">
      <li class="nav-item"><a href="/home">Home</a></li>
      <li class="nav-item"><a href="/biography">Biography</a></li>
      <li class="nav-item" style="background-color: #777; border-radius: 4px; padding: 5px 0px;"><a href="/project">Project</a></li>
      <li class="nav-item"><a href="/skill/1">Skill</a></li>
      <li class="nav-item"><a href="/logout">Logout</a></li>
    </ul>
  </nav>
</div>

<div class="search_container">
  <a href="/project-create"><button class="add_project">Add Project <i class="fa-solid fa-plus"></i></button></a>
  <div class="search_bar">
  <input type="text" id="searchInput" placeholder="Search project..." oninput="getSuggestions(this.value)">
  <div class="suggestions">
  <div id="projectSuggestionsContainer"></div><p>
  </div>
  </div>
  <p>
  </div>
  <div class="project_border">
    <div class="project_table">
      <table class="table_border">
        <thead>
          <tr class="table_head">
            <th>Project Name</th>
            <th>Project Description</th>
            <th>Start Date</th>
            <th>End Date</th>
            <th>Grade</th>
            <th>Size</th>
            <th>Created By</th>
            <th>Create Date</th>
          </tr>
        </thead>
        <tbody>
          <% projects
              .sort((a, b) => new Date(b.ProjectID) - new Date(a.ProjectID))
              .forEach(project => { %>
            <tr>
              <td><a href="/project/<%= project.ProjectID %>">
                  <%= project.ProjectName %>
                </a></td>
              <td style="width: 500px;"><a href="/project/<%= project.ProjectID %>">
                <%= project.ProjectDescription %></a>
              </td>
              <td><a href="/project/<%= project.ProjectID %>">
                <%= project.ProjectStartDate %></a>
              </td>
              <td><a href="/project/<%= project.ProjectID %>">
                <% if (new Date(project.ProjectEndDate).toDateString() === 'Thu Jan 01 1970') { %>
                  <%= '' %>
                <% } else { %>
                  <%= project.ProjectEndDate %>
                <% } %>
                </a>
              </td>
              <td><a href="/project/<%= project.ProjectID %>">
                <%= project.ProjectGrade %></a>
              </td>
              <td><a href="/project/<%= project.ProjectID %>">
                <%= project.MemberCount %>/<%= project.ProjectSize %></a>
              </td>
              <td><a href="/project/<%= project.ProjectID %>">
                <%= project.CreatedByFirstName %> <%= project.CreatedByLastName %></a>
              </td>
              <td><a href="/project/<%= project.ProjectID %>">
                <%= project.ProjectCreatedDate %></a>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>
  
</body>

</html>