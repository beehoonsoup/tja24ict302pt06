<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Projects</title>
  <style>
    table {
      width: 100%;
      border-collapse: collapse;
    }

    th,
    td {
      border: 1px solid black;
      padding: 8px;
      text-align: left;
    }
  </style>

<script>
  function getSuggestions(input) {
    fetch(`/search-projects?query=${input}`)
      .then(response => response.json())
      .then(data => {
        const suggestionsContainer = document.getElementById('suggestionsContainer');
        suggestionsContainer.innerHTML = '';
        data.forEach(project => {
          const suggestion = document.createElement('div');
          suggestion.textContent = project.ProjectName;
          suggestion.onclick = () => selectProject(project.ProjectID);
          suggestionsContainer.appendChild(suggestion);
        });
      })
      .catch(error => console.error('Error fetching suggestions:', error));
  }

  function selectProject(projectID) {
    window.location.href = `/project/${projectID}`;
  }
</script>
</head>

<body>
  <a href="/biography">Biography</a> |
  <a href="/profile">Profile</a> |
  <a href="/project">Project</a> |
  <a href="/notifications">Notifications</a> |
  <a href="/logout">Logout</a>
  <p></p>
  <h1>Projects</h1>
  Search: <input type="text" id="searchInput" oninput="getSuggestions(this.value)">
  <div id="suggestionsContainer"></div><p>
  <a href="/project-create">Add Project</a> |
  <p>
  <table>
    <thead>
      <tr>
        <th>Project Name</th>
        <th>Project Description</th>
        <th>Start Date</th>
        <th>End Date</th>
        <th>Grade</th>
        <th>Size</th>
        <th>Created By</th>
        <th>Create Date</th>
      </tr>
    </thead>
    <tbody>
      <% projects.forEach(project=> { %>
        <tr>
          <td><a href="/project/<%= project.ProjectID %>">
              <%= project.ProjectName %>
            </a></td>
          <td>
            <%= project.ProjectDescription %>
          </td>
          <td>
            <%= project.ProjectStartDate %>
          </td>
          <td>
            <% if (new Date(project.ProjectEndDate).toDateString()==='Thu Jan 01 1970' ) { %>
              <!-- Display blank if ProjectEndDate is 1/1/1970 -->
              <%= '' %>
                <% } else { %>
                  <%= project.ProjectEndDate %>
                    <% } %>
          </td>
          <td>
            <%= project.ProjectGrade %>
          </td>
          <td>
            <%= project.MemberCount %>/<%= project.ProjectSize %>
          </td>
          <td>
            <%= project.CreatedByFirstName %>
              <%= project.CreatedByLastName %>
          </td>
          <td>
            <%= project.ProjectCreatedDate %>
          </td>
        </tr>
        <% }) %>
    </tbody>
  </table>
</body>

</html>